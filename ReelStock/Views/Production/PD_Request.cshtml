@Scripts.Render("~/ReelIndex/js")

<div class="container">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12">
            <h3 class="mb-1 text-center">สร้างรายการเบิกล้อ</h3>
            <h6 class="text-center" style="color:red"><i>กรอกข้อมูลรายละเอียด เพื่อสร้างรายการเบิกล้อ</i></h6>

            <div class="row">
                <div class="col-xl-3 col-lg-6">
                </div>
                <div class="col-xl-2 col-lg-6">
                    <i style="font-size:16px">จำนวน</i>
                    <input id="QTY_Reel" type="text" name="last_name" placeholder="กรอกจำนวน" class="single-input">
                </div>
                <div class="col-xl-2 col-lg-6">
                    <i style="font-size:16px">เครื่องจักรที่เบิก</i>
                    <input id="QTY_Reel" type="text" name="last_name" placeholder="กรอกเครื่องจักร" class="single-input">
