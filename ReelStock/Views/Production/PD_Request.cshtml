                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>ลำดับ</th>
                                        <th>ล้อขนาด</th>
                                        <th>Location</th>
                                        <th>วัน/เวลา เบิก</th>
                                        <th>จำนวน</th>
                                        <th>#</th>
                                    </tr>
                                </tfoot>
                            </table>
