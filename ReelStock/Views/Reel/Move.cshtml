
@{
    ViewBag.Title = "FORM";
}

<!--<div class="container" style="font-family: 'Barlow Condensed'"> -->
@Scripts.Render("~/ReelMove/js")

<div class="container">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12">
            <h3 class="mb-1 text-center">ย้ายล้อ</h3>
            <h6 class="text-center" style="color:red"><i>ยิงรายการล้อที่ย้าย</i></h6>


            <div class="row">

                <div class="col-xl-3 col-lg-3">
                </div> 
                <div class="col-xl-2 col-lg-2">
                    <i style="font-size:16px">บาร์โค้ดล้อ</i>
                    <input id="Barcode" type="text" name="last_name" placeholder="บาร์โค้ดล้อ" class="single-input">
                </div> 

                <div class="col-xl-2 col-lg-2">
                    <i style="font-size:16px">Location</i>
                    <input id="Location" type="text" name="last_name" placeholder="Location" class="single-input">
                </div>
                <div class="col-xl-2 col-lg-2">
                    <i style="font-size:16px">ผู้บันทึก</i>
                    <input id="User" type="text" name="last_name" placeholder="บาร์โค้ดผู้บันทึก" class="single-input">
                </div> 
            </div>
            <div class="row mt-3">
                <div class="col-xs-12 col-md-12" style="text-align:center">
                    <button id="Save" class="genric-btn primary radius">บันทึก</button>
                    <button class="genric-btn primary radius">ยกเลิก</button>
                </div>
            </div>

        </div>
    </div>
</div>


